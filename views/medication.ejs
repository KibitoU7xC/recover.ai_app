<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medication Reminders</title>
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI:wght@400;600;700&display=swap" rel="stylesheet" />
    <style>
        body { font-family: 'Segoe UI', sans-serif; background-color: #f8f9fa; padding: 20px; }
        .container { max-width: 600px; margin: 0 auto; background: white; padding: 20px; border-radius: 16px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); }
        h1 { color: #333; font-size: 1.5rem; margin-bottom: 20px; }
        
        /* FORM */
        .add-form { display: flex; gap: 10px; margin-bottom: 30px; flex-wrap: wrap; }
        input { padding: 12px; border: 1px solid #ddd; border-radius: 8px; flex: 1; }
        button.add-btn { background: #2ecc71; color: white; border: none; padding: 12px 20px; border-radius: 8px; cursor: pointer; font-weight: bold; }
        
        /* LIST */
        .reminder-list { list-style: none; padding: 0; }
        .reminder-item { display: flex; justify-content: space-between; align-items: center; padding: 15px; border-bottom: 1px solid #eee; }
        .reminder-info strong { display: block; font-size: 1.1rem; color: #333; }
        .reminder-info span { font-size: 0.9rem; color: #777; }
        .delete-btn { color: #ff5252; background: none; border: none; cursor: pointer; font-size: 1.2rem; }
    </style>
</head>
<body>
    <div class="container">
        <h1>üíä Medication Reminders</h1>
        
        <div class="add-form">
            <input type="text" id="medName" placeholder="Medicine Name (e.g. Aspirin)" required>
            <input type="time" id="medTime" required>
            <button class="add-btn" onclick="addReminder()">Add</button>
        </div>

        <h3>Daily Schedule</h3>
        <ul id="reminderList" class="reminder-list">
            <div style="text-align: center; color: #999; margin-top: 20px;">Loading reminders...</div>
        </ul>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            loadReminders();
            requestPermissions(); // Ask for permission immediately
        });

        // --- NOTIFICATION LOGIC (DAILY) ---
        
        async function requestPermissions() {
            if (window.Capacitor) {
                const { LocalNotifications } = Capacitor.Plugins;
                await LocalNotifications.requestPermissions();
            }
        }

        async function scheduleNotification(id, medicineName, timeString) {
            if (!window.Capacitor) return; // Only runs on phone

            const { LocalNotifications } = Capacitor.Plugins;
            
            // 1. Get Hour and Minute from input
            const [hours, minutes] = timeString.split(':').map(Number);

            // 2. Schedule the alarm to repeat DAILY
            await LocalNotifications.schedule({
                notifications: [{
                    title: "üíä Medication Reminder",
                    body: `Time to take your ${medicineName}!`,
                    // Create a unique numeric ID for the notification
                    id: parseInt(id.substring(0, 8), 16) || Math.floor(Math.random() * 100000), 
                    schedule: { 
                        on: { hour: hours, minute: minutes }, // üëà THIS MAKES IT REPEAT EVERY DAY
                        allowWhileIdle: true 
                    },
                    sound: null,
                    actionTypeId: "",
                    extra: null
                }]
            });
            
            // alert(`Daily alarm set for ${timeString}`);
        }

        // --- DATABASE LOGIC ---

        async function loadReminders() {
            try {
                const res = await fetch('/reminders/today');
                const data = await res.json();
                
                const list = document.getElementById('reminderList');
                list.innerHTML = ""; 

                if (data.length === 0) {
                    list.innerHTML = "<div style='text-align:center; color:#ccc;'>No reminders set.</div>";
                    return;
                }

                data.forEach(rem => {
                    const li = document.createElement('li');
                    li.className = 'reminder-item';
                    li.innerHTML = `
                        <div class="reminder-info">
                            <strong>${rem.medicine}</strong>
                            <span>‚è∞ ${rem.reminderTime} (Daily)</span>
                        </div>
                        <button class="delete-btn" onclick="deleteReminder('${rem._id}')">&times;</button>
                    `;
                    list.appendChild(li);
                });
            } catch (err) {
                console.error("Error loading reminders:", err);
            }
        }

        async function addReminder() {
            const name = document.getElementById('medName').value;
            const time = document.getElementById('medTime').value;

            if (!name || !time) return alert("Please fill in both fields.");

            try {
                const res = await fetch('/add-reminder', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ medicine: name, reminderTime: time })
                });

                if (res.ok) {
                    // Schedule Notification on Phone
                    const tempId = Date.now().toString(); 
                    scheduleNotification(tempId, name, time);

                    document.getElementById('medName').value = "";
                    loadReminders(); 
                } else {
                    alert("Failed to save reminder.");
                }
            } catch (err) {
                console.error(err);
            }
        }

        async function deleteReminder(id) {
            if(!confirm("Delete this reminder?")) return;
            
            try {
                await fetch(`/reminders/${id}`, { method: 'DELETE' });
                // Note: This removes from DB/UI. 
                // To remove the mobile notification perfectly, we would need to track the exact ID used.
                loadReminders();
            } catch (err) {
                console.error(err);
            }
        }
    </script>

    <script>
    document.addEventListener('DOMContentLoaded', () => {
        if (window.Capacitor) {
            const { App } = Capacitor.Plugins;

            App.addListener('backButton', async () => {
                const path = window.location.pathname;
                // Exit app on these main pages
                if (path === '/dashboard' || path === '/login' || path === '/') {
                    App.exitApp();
                } else {
                    // Go back for sub-pages
                    window.history.back();
                }
            });
        }
    });
    </script>
</body>
</html>